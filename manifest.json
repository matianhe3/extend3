{
  "name": "途家爬虫V3",
  "description": "爬虫Chrome扩展V3",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "downloads",
    "scripting",
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": { "default_popup": "popup.html" }
}
